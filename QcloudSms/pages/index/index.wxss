/**index.wxss**/
page{
  height: 100%;
  width: 100%;
  background: linear-gradient(rgb(12, 84, 228), #486ec3);
  display: flex;
  flex-direction: column;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 90%;
  margin: 50rpx auto;
}

.row{
  position: relative;
  height: 80rpx;
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.row input{
  width: 100%;
  height:100%;
}
